<%- include('parts/header.ejs')%>
<%- include('parts/navbar.ejs')%>

<div class="container">
    <!-- Filter Form Start -->
    <br>
    <form method="GET" action="/" class="mb-4">
        <div class="row g-2">
            <div class="col-10">
                <select name="category" class="form-select" onchange="this.form.submit()">
                    <option value="">All</option>
                    <option value="shirts" <%= category === 'shirts' ? 'selected' : '' %>>Shirts</option>
                    <option value="pants" <%= category === 'pants' ? 'selected' : '' %>>Pants</option>
                    <option value="shoes" <%= category === 'shoes' ? 'selected' : '' %>>Shoes</option>
                    <option value="other" <%= category === 'other' ? 'selected' : '' %>>Other</option>
                </select>
            </div>
            <div class="col-2">
                <button type="submit" class="btn btn-primary w-100">Filter</button>
            </div>
        </div>
    </form>
    <!-- Filter Form End -->

    <% if(validationError) { %>
        <p class="alert alert-danger text-center">
            <%= validationError.msg %>
        </p>
    <% } %>

    <div class="row g-4">
        <% if(products.length === 0){ %>
            <div class="col-12">
                <div class="card text-center shadow-sm p-5">
                    <div class="card-body">
                        <i class="bi bi-box-seam display-1 text-muted"></i>
                        <h3 class="mt-3 text-muted">No products available</h3>
                        <p class="text-muted">Try changing the filter or come back later.</p>
                        <a href="/" class="btn btn-outline-primary mt-3">Reset Filters</a>
                    </div>
                </div>
            </div>
        <% } else { %>
            <% for(let product of products) { %>
            <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                <div class="card h-100 shadow-sm">
                    <img src="/<%=product.image%>" class="card-img-top" alt="Image">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title mb-2">
                            <a href="/product/<%= product._id%>" class="text-decoration-none">
                                <%= product.name%>
                            </a>
                        </h5>
                        <p class="card-text mb-3">Price: <strong><%= product.price%> $</strong></p>

                        <form action="/cart" method="POST" class="mt-auto">
                            <div class="input-group">
                                <input type="number" name="amount" class="form-control" min="1" placeholder="Quantity">
                                <button type="submit" class="btn btn-success">Add to cart</button>
                            </div>
                            <input type="hidden" name="name" value="<%= product.name %>">
                            <input type="hidden" name="price" value="<%= product.price %>">
                            <input type="hidden" name="productId" value="<%= product._id %>">
                            <input type="hidden" name="redirectTo" value="/">
                        </form>
                    </div>
                </div>
            </div>
            <% } %>
        <% } %>
    </div>
</div>

<%- include('parts/footer.ejs')%>
