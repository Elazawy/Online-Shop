<%- include('parts/header.ejs')%>
<%- include('parts/navbar.ejs')%>

<form action="/reset-password" method="post">
    <div class="container text-center">
        <br>
        <h3>Reset Password</h3>
        <br>
        <div class="col-12 col-md-6 col-lg-4 mx-auto">
            <input type="hidden" name="email" value="<%= email %>">
            <input type="hidden" name="token" value="<%= token %>">
            <input type="password" id="password" name="password" class="form-control input-field" placeholder="New Password">
            <% let passwordError = validationErrors.find(err => err.path === "password")%>
            <br>
            <% if(passwordError) {%>
                <p class="alert alert-danger"><%= passwordError.msg%></p>
            <% } %>
            <input type="password" id="confirmPassword" name="confirmPassword" class="form-control input-field" placeholder="Confirm New Password">
            <% let confirmPasswordError = validationErrors.find(err => err.path === "confirmPassword")%>
            <br>
            <% if(confirmPasswordError) {%>
                <p class="alert alert-danger"><%= confirmPasswordError.msg%></p>
            <% } %>
            <br>
            <input type="submit" value="Reset Password" class="btn btn-primary">
            <br>
            <% if(authError) { %>
                <br>
                <p class="alert alert-danger"><%= authError %></p>
            <% } %>
            <br>
        </div>
    </div>
</form>

<%- include('parts/footer.ejs')%>
