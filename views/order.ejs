<%- include('parts/header.ejs')%>
<%- include('parts/navbar.ejs')%>

<div class="container mt-5">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="display-6 fw-bold text-center">My Orders</h2>
        </div>
    </div>

    <!-- Orders Content -->
    <div class="row">
        <div class="col-12">
            <% if(orders.length === 0) { %>
                <div class="card text-center py-5">
                    <div class="card-body">
                        <h4 class="text-muted mb-3">No Orders Found</h4>
                        <p class="text-muted">You haven't placed any orders yet</p>
                        <a href="/" class="btn btn-primary">Start Shopping</a>
                    </div>
                </div>
            <% } else { %>
                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-dark">
                                <tr>
                                    <th scope="col">Product Name</th>
                                    <th scope="col" class="text-center">Quantity</th>
                                    <th scope="col" class="text-center">Cost</th>
                                    <th scope="col">Delivery Address</th>
                                    <th scope="col" class="text-center">Status</th>
                                    <th scope="col" class="text-center">Order Date</th>
                                    <th scope="col" class="text-center">Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                <% for(const ord of orders) { %>
                                    <tr>
                                        <td class="align-middle">
                                            <div class="fw-semibold"><%= ord.productName%></div>
                                        </td>
                                        <td class="text-center align-middle">
                                            <span class="badge bg-secondary"><%= ord.amount %></span>
                                        </td>
                                        <td class="text-center align-middle">
                                            <span class="fw-bold text-success">$<%= ord.cost %></span>
                                        </td>
                                        <td class="align-middle">
                                            <small class="text-muted"><%= ord.address %></small>
                                        </td>
                                        <td class="text-center align-middle">
                                            <% if(ord.status === 'pending') { %>
                                                <span class="badge bg-warning text-dark"><%= ord.status %></span>
                                            <% } else if(ord.status === 'delivered') { %>
                                                <span class="badge bg-success"><%= ord.status %></span>
                                            <% } else if(ord.status === 'cancelled') { %>
                                                <span class="badge bg-danger"><%= ord.status %></span>
                                            <% } else if(ord.status === 'processing') { %>
                                                <span class="badge bg-info"><%= ord.status %></span>
                                            <% } else { %>
                                                <span class="badge bg-secondary"><%= ord.status %></span>
                                            <% } %>
                                        </td>
                                        <td class="text-center align-middle">
                                            <small class="text-muted">
                                                <%= ord.timeOrderedIn.toLocaleString("en-GB", {
                                                    year: "numeric",
                                                    month: "long",
                                                    day: "2-digit",
                                                    hour: "2-digit",
                                                    minute: "2-digit"
                                                }) %>
                                            </small>
                                        </td>
                                        <td class="text-center align-middle">
                                            <form action="/order/cancel" method="post">
                                                <input type="hidden" name="orderId" value="<%= ord._id %>">
                                                <button type="submit"
                                                        class="btn btn-outline-danger btn-sm"
                                                        onclick="return confirm('Are you sure you want to cancel this order?')">
                                                    Cancel
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Orders Actions -->
                <div class="card mt-4">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <h5 class="mb-0">Total Orders:
                                    <span class="text-primary fw-bold"><%= orders.length %></span>
                                </h5>
                            </div>
                            <div class="col-md-6">
                                <form action="/order/cancelAll" method="post" class="d-flex justify-content-md-end justify-content-center mt-3 mt-md-0">
                                    <button type="submit"
                                            class="btn btn-outline-danger"
                                            onclick="return confirm('Are you sure you want to cancel ALL orders?')">
                                        Cancel All Orders
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>