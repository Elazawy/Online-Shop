<%- include('parts/header.ejs')%>
<%- include('parts/navbar.ejs')%>

<div class="container mt-5">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="display-6 fw-bold text-center">Shopping Cart</h2>
        </div>
    </div>

    <!-- Validation Error -->
    <% if(validationError) { %>
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-danger text-center">
                    <%= validationError.msg %>
                </div>
            </div>
        </div>
    <% } %>

    <!-- Cart Content -->
    <div class="row">
        <div class="col-12">
            <% if(items.length == 0) { %>
                <div class="card text-center py-5">
                    <div class="card-body">
                        <h4 class="text-muted mb-3">Your cart is empty</h4>
                        <p class="text-muted">There are no items in your cart</p>
                        <a href="/" class="btn btn-primary">Continue Shopping</a>
                    </div>
                </div>
            <% } else { %>
                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-dark">
                                <tr>
                                    <th scope="col" class="text-center">#</th>
                                    <th scope="col">Product Name</th>
                                    <th scope="col" class="text-center">Price</th>
                                    <th scope="col" class="text-center">Quantity</th>
                                    <th scope="col" class="text-center">Total</th>
                                    <th scope="col" class="text-center">Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                <% for( let i = 0; i < items.length; i++) { %>
                                    <tr>
                                        <td class="text-center align-middle fw-bold"><%= i+1 %></td>
                                        <td class="align-middle">
                                            <div class="fw-semibold"><%= items[i].name %></div>
                                        </td>
                                        <td class="text-center align-middle">
                                            <span class="fw-bold text-primary">$<%= items[i].price %></span>
                                        </td>
                                        <form method="post" class="d-contents">
                                            <td class="text-center align-middle">
                                                <div class="d-flex justify-content-center">
                                                    <input type="number"
                                                           name="amount"
                                                           class="form-control text-center"
                                                           style="width: 80px;"
                                                           value="<%= items[i].amount %>"
                                                           min="1">
                                                </div>
                                            </td>
                                            <td class="text-center align-middle">
                                                <span class="fw-bold text-success">$<%= (items[i].price * items[i].amount).toFixed(2) %></span>
                                            </td>
                                            <td class="text-center align-middle">
                                                <input type="hidden" name="productName" value="<%= items[i].name %>">
                                                <input type="hidden" name="price" value="<%= items[i].price %>">
                                                <input type="hidden" name="cartId" value="<%= items[i]._id %>">

                                                <div class="btn-group-vertical btn-group-sm" role="group">
                                                    <button type="submit"
                                                            class="btn btn-outline-primary btn-sm mb-1"
                                                            formaction="/cart/save">
                                                        Save
                                                    </button>
                                                    <button type="submit"
                                                            class="btn btn-success btn-sm mb-1"
                                                            formaction="/order/address">
                                                        Order
                                                    </button>
                                                    <button type="submit"
                                                            class="btn btn-outline-danger btn-sm"
                                                            formaction="/cart/delete">
                                                        Delete
                                                    </button>
                                                </div>
                                            </td>
                                        </form>
                                    </tr>
                                <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Cart Actions -->
                <div class="card mt-4">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <h5 class="mb-0">Cart Total:
                                    <span class="text-success fw-bold">
                                        $<%= items.reduce((total, item) => total + (item.price * item.amount), 0).toFixed(2) %>
                                    </span>
                                </h5>
                            </div>
                            <div class="col-md-6">
                                <form method="post" class="d-flex gap-2 justify-content-md-end justify-content-center mt-3 mt-md-0">
                                    <button type="submit"
                                            class="btn btn-success"
                                            formaction="/order/addressAll">
                                        Order All Items
                                    </button>
                                    <button type="submit"
                                            class="btn btn-outline-danger"
                                            formaction="/cart/deleteAll"
                                            onclick="return confirm('Are you sure you want to delete all items?')">
                                        Clear Cart
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>